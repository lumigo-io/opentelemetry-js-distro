{
  "name": "@lumigo/opentelemetry",
  "version": "1.0.1",
  "description": "Lumigo wrapper to trace distributed architecture",
  "main": "dist/src/wrapper.js",
  "private": false,
  "types": "dist/src/wrapper.d.ts",
  "scripts": {
    "build": "rm -rf dist wrapper.tgz && tsc --build --force && tracer=\"$(npm pack)\" && mv \"$tracer\" wrapper.tgz",
    "prepublishOnly": "npm run prettier:fix && npm run lint && npm run test:unit && npm run test:component:express",
    "lint": "eslint \"src/**/*.{ts,tsx,js}\"",
    "install-component": "scripts/install_component.sh",
    "prettier:ci": "prettier --list-different \"src/**/*.[jt]s\" --parser typescript",
    "prettier:fix": "prettier --write \"./src/**/*.[jt]s\" --parser typescript",
    "semantic-release": "semantic-release",
    "test:unit": "npm run build && jest -c jest.unit.config.js --detectOpenHandles --runInBand --forceExit",
    "test:component:express": "npm run build && npm run install-component && jest -c jest.express.component.config.js --detectOpenHandles --runInBand --forceExit",
    "tsc": "tsc"
  },
  "repository": "git@github.com:lumigo-io/opentelemetry-js-distro.git",
  "author": "Orr Levinger",
  "dependencies": {
    "@lumigo/node-core": "^1.12.0",
    "@opentelemetry/api": "1.1.0",
    "@opentelemetry/core": "1.1.1",
    "@opentelemetry/exporter-trace-otlp-http": "0.28.0",
    "@opentelemetry/instrumentation": "0.28.0",
    "@opentelemetry/instrumentation-express": "0.28.0",
    "@opentelemetry/instrumentation-http": "0.28.0",
    "@opentelemetry/resource-detector-aws": "^1.1.1",
    "@opentelemetry/resources": "1.1.1",
    "@opentelemetry/sdk-trace-base": "1.1.1",
    "@opentelemetry/sdk-trace-node": "1.1.1",
    "@opentelemetry/semantic-conventions": "1.1.1",
    "opentelemetry-instrumentation-express": "0.28.0",
    "shimmer": "^1.2.1"
  },
  "homepage": "https://github.com/lumigo-io/opentelemetry-js-distro.git",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "^7.9.0",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-typescript": "^7.16.7",
    "@opentelemetry/exporter-zipkin": "^1.0.1",
    "@opentelemetry/plugin-express": "^0.15.0",
    "@opentelemetry/plugin-http": "^0.18.2",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.2",
    "@types/express": "^4.17.8",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "aws-config": "^1.4.0",
    "aws-sdk": "^2.1066.0",
    "axios": "^0.21.1",
    "body-parser": "^1.19.1",
    "cross-env": "^6.0.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "express": "4.17.0",
    "jest": "^26.6.3",
    "jest-chain": "^1.1.5",
    "prettier": "^2.2.1",
    "semantic-release": "^19.0.3",
    "tmp": "^0.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.3.4",
    "webpack": "^5.72.1",
    "webpack-cli": "^3.3.4"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
