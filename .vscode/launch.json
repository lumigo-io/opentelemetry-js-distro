{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Jest Unit tests",
            "type": "node",
            "preLaunchTask": "npm: build",
            "request": "launch",
            "runtimeArgs": [
              "--inspect-brk",
              "${workspaceRoot}/node_modules/.bin/jest",
              "--runInBand"
            ],
            "trace": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
        }
    ]
}
