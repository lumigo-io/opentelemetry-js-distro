{
  "compilerOptions": {
    "allowJs": true,
    "target": "es6",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitOverride": true,
    "rootDir": "./src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "composite": true
  },
  "include": ["./src/**/*"],
  "exclude": ["**/*.test.js", "**/*.test.ts"]
}
