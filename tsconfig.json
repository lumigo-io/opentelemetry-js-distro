{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ES2019", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "inlineSources": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitOverride": true,
    "rootDir": ".",
    "outDir": "lib"

  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": ["**/*.test.js", "**/*.test.ts"]
}